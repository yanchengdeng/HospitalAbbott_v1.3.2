<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_gray_f6f6f8"
    tools:context=".ui.detection.ChartScanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:text="(单位：mmol/L)"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColor="@color/alertdialog_line"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content" />


        <com.comvee.hospitalabbott.widget.view.BubbleChart
            android:id="@+id/bubbleChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@android:color/white"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">
            <TextView
                android:text="葡萄糖平均值"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_blood_avg"
                android:text="-- mmol/L"
                android:textSize="@dimen/sp_16"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">
            <TextView
                android:text="低血糖事件"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_low_blood_event"
                android:text="-- 次"
                android:textSize="@dimen/sp_16"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">
            <TextView
                android:text="平均持续时间"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_blood_keep_time"
                android:text="-- 分钟"
                android:textSize="@dimen/sp_16"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>