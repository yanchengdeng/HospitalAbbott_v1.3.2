<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/blue"
        android:gravity="center"
        android:text="质控模式"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/test_result_height"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.comvee.hospitalabbott.widget.view.CircleProgressBar
            android:id="@+id/qualityResultFragment_circleProgress"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            app:bgCircleProgressColor="#e6e6e6"
            app:circleProgressColor="#fe633c"
            app:circleProgressDisplayType="1"
            app:circleProgressStrokeWidth="6px"
            app:circleProgressTextColor="@color/black"
            app:circleProgressTextSize="@dimen/text_33" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/qualityResultFragment_tv_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_17"
                tools:text="da" />

            <TextView
                android:id="@+id/qualityResultFragment_tv_remind1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_17" />
        </LinearLayout>

        <TextView
            android:id="@+id/qualityResultFragment_tv_reference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.7dp"
            android:text="@string/reference_value"
            android:textColor="@color/text_gray_99"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <Button
        android:id="@+id/qualityResultFragment_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="@dimen/top_left"
        android:layout_marginRight="@dimen/top_right"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_rectangle_btn"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18" />

</LinearLayout>