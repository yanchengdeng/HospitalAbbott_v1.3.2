<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_top_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:layout_centerInParent="true"
        android:background="@color/blue"
        android:gravity="center"
        android:text="@string/nurse_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18" />

    <com.comvee.hospitalabbott.widget.magicindicator.MagicIndicator
        android:id="@+id/magic_indicator"
        android:layout_width="match_parent"
        android:layout_height="46.7dp"
        android:layout_gravity="center_horizontal" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.comvee.hospitalabbott.ui.main.TaskParamCodeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

