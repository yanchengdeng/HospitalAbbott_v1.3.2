<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchAdapter_main_ll"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ed_height"
    android:background="@color/white"
    android:paddingLeft="@dimen/top_left"
    android:paddingRight="@dimen/top_right">

    <TextView
        android:id="@+id/searchAdapter_tv_bed"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18"
        tools:text="3床" />

    <TextView
        android:id="@+id/searchAdapter_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical|left"
        android:layout_toRightOf="@+id/searchAdapter_tv_bed"
        android:layout_marginLeft="8dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18"
        tools:text="患者" />

    <TextView
        android:id="@+id/searchAdapter_tv_departmentName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical|right"
        android:singleLine="true"
        android:textColor="@color/text_gray_99"
        android:textSize="@dimen/text_17"
        android:drawablePadding="10.7dp"
        android:drawableRight="@drawable/hospital_107"
        tools:text="科室" />

</RelativeLayout>