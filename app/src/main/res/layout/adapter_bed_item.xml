<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bedItem_cardView"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginBottom="10.7dp"
    android:layout_marginLeft="@dimen/top_left"
    android:layout_marginRight="@dimen/top_right"
    android:background="@drawable/rounded_rectangle_bed">

    <ImageView
        android:id="@+id/bedCard_iv_isNetWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bloodtwo_01"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/bedCard_iv_BedLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="23dp"
        tools:background="@drawable/hospital_63" />

    <TextView
        android:id="@+id/bedCard_tv_BedNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/bedCard_iv_BedLog"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18"
        tools:text="01" />

    <TextView
        android:id="@+id/tv_bed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/bedCard_tv_BedNo"
        android:text="床"
        android:textColor="@color/text_null"
        android:textSize="@dimen/text_14" />

    <TextView
        android:id="@+id/bedCard_tv_memberName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/tv_bed"
        android:ellipsize="end"
        android:maxLength="8"
        android:text="空"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18"
        tools:text="222222222222222222222222222" />

    <LinearLayout
        android:id="@+id/bedCard_ll_refuseMonitor"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:id="@+id/refuseMonitor_tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_gray_66"
            android:textSize="@dimen/text_13"
            android:visibility="gone"
            tools:text="早餐后" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6.7dp"
            android:src="@drawable/hospital_44" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="拒绝监测"
            android:textColor="#ff0000"
            android:textSize="@dimen/text_14" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bedCard_ll_values"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bedCard_tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/text_gray_66"
            android:textSize="@dimen/text_13"
            android:visibility="gone"
            tools:text="早餐后"
            tools:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/bedCard_iv_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                tools:src="@drawable/hospital_99"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/bedCard_tv_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/bedCard_iv_values"
                android:text="--"
                android:textColor="@color/text_null"
                android:textSize="@dimen/text_18" />


            <ImageView
                android:id="@+id/bedCard_iv_biased"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="6.7dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/bedCard_tv_values"
                android:visibility="gone"
                tools:src="@drawable/blood_31"
                tools:visibility="visible" />

        </RelativeLayout>

        <TextView
            android:id="@+id/bedCard_tv_valuesCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/company"
            android:textColor="@color/text_null"
            android:textSize="@dimen/text_12" />

        <!--android:layout_below="@+id/bedCard_tv_values"-->


    </LinearLayout>

</RelativeLayout>






