<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/left_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/top_left"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/left_iv"
        android:textSize="@dimen/text_17"
        android:gravity="center_vertical|left"
        android:layout_centerVertical="true"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/right_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/top_right"
        android:layout_centerVertical="true"
        android:src="@drawable/hospital_107"/>

    <TextView
        android:id="@+id/right_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:layout_toRightOf="@+id/left_tv"
        android:layout_toLeftOf="@+id/right_iv"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/top_left"
        android:textSize="@dimen/text_16"
        android:singleLine="true"
        android:textColor="@color/text_gray_66"/>

</merge>