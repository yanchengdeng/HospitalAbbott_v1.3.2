<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="46.7dp"
    android:orientation="horizontal">

    <LinearLayout
        style="@style/patient_tv_style"
        android:layout_weight="1"
        android:gravity="center">

        <!--<CheckBox-->
        <!--android:id="@+id/patient_checkBox"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/cb_select_bg"-->
        <!--android:button="@null" />-->
        <ImageView
            android:id="@+id/patient_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hospital_163" />

    </LinearLayout>

    <LinearLayout
        style="@style/patient_tv_style"
        android:layout_weight="2"
        android:gravity="center">

        <TextView
            android:id="@+id/name_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            tools:text="内分泌科" />
    </LinearLayout>


    <LinearLayout
        style="@style/patient_tv_style"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/no_Bed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            tools:text="03" />
    </LinearLayout>


    <LinearLayout
        style="@style/patient_tv_style"
        android:layout_weight="2"
        android:gravity="center">

        <TextView
            android:id="@+id/name_patient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            tools:text="李丽丽" />
    </LinearLayout>

</LinearLayout>